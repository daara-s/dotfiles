set nocompatible
filetype on
filetype plugin on
filetype indent on
syntax enable
" colorscheme monokai

" tabs
set shiftwidth=4
set tabstop=4
set expandtab

" visuals
set number
set nobackup
set scrolloff=10
set nowrap
set visualbell

" search
set incsearch
set hlsearch
set ignorecase
set smartcase
set showcmd
set showmode
set showmatch
set history=1000
set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx

" Use system clipboard
set clipboard+=unnamed

let mapleader = " "

