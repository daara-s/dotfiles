# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Set name of the theme to load --- if set to "random", it will
# load a random theme each time oh-my-zsh is loaded, in which case,
# to know which specific one was loaded, run: echo $RANDOM_THEME
# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="robbyrussell"

# Which plugins would you like to load?
# Standard plugins can be found in $ZSH/plugins/
# Custom plugins may be added to $ZSH_CUSTOM/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(
    git
    git-prompt
    zsh-autosuggestions
    zsh-syntax-highlighting
)

source $ZSH/oh-my-zsh.sh

# User configuration

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# poetry
export PATH="$HOME/.local/bin:$PATH"

# JDK (used for Spark)
export JAVA_HOME="/usr/lib/jvm/java-11-openjdk-amd64"

autoload -Uz compinit
zstyle ':completion:*' menu select
fpath+=~/.zfunc

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# vim
export EDITOR=nvim
alias vim=nvim
alias nvimdiff='nvim -d'

function _note() {
  $EDITOR "$HOME/.notes/daily-$(date -d "$1" "+%F").md";
};

alias note=_note
alias cat=batcat

autoload -Uz change_directory
bindkey -s '^f' 'change_directory\n'

# WSL
{{- if eq .chezmoi.os "linux" }}
# Opening browser in Windows via wslu
export BROWSER=wslview
# pycharm
export PATH="$HOME/.local/share/JetBrains/Toolbox/scripts:$PATH"
alias wezterm=wezterm.exe
source "$HOME"/.work_dotfiles
{{- else if eq .chezmoi.os "darwin" }}
alias ynab-split="poetry run -C ~/Projects/ynab-commands ynab-split"
[ -f "$HOME/.ghcup/env" ] && source "$HOME/.ghcup/env" # ghcup-env
  alias sclang="/Applications/SuperCollider.app/Contents/MacOS/sclang"
{{- end }}

# chezmoi
fpath+=~/.zsh/completions/_chezmoi
